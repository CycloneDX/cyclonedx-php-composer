{
    "name": "cyclonedx/cyclonedx-php-composer",
    "description": "Creates CycloneDX Software Bill-of-Materials (SBOM) from PHP Composer projects",
    "type": "composer-plugin",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "nscuro",
            "email": "nscuro@protonmail.com"
        }
    ],
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": "^7.3 || ^8.0",
        "ext-json": "*",
        "composer-plugin-api": "^1.0 || ^2.0"
    },
    "require-dev": {
        "composer/composer": "^1.3 || ^2.0",
        "friendsofphp/php-cs-fixer": "^2.18",
        "phpstan/phpstan": "^0.12.72",
        "phpstan/phpstan-phpunit": "^0.12.17",
        "phpunit/phpunit": "^9.5",
        "swaggest/json-schema": "^0.12.31"
    },
    "extra": {
        "class": "CycloneDX\\Composer\\Plugin"
    },
    "autoload": {
        "psr-4": {
            "CycloneDX\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CycloneDX\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test:phpunit": "phpunit",
        "test:sca": "phpstan analyse" ,
        "test:cs": "php-cs-fixer fix --no-interaction --dry-run --diff",
        "test": [
            "@test:phpunit",
            "@test:sca",
            "@test:cs"
        ],
        "demo:setup": [
            "@composer -dtestProject install",
            "@composer -dtestProject update"
        ],
        "demo:run" : "@composer -dtestProject make-bom",
        "demo:xml" : "@demo:run --output-file=-",
        "demo:json" : "@demo:run --output-file=- --json",
        "demo": [
            "@demo:setup",
            "@demo:xml",
            "@demo:json"
        ],
        "cs-fix": "php-cs-fixer fix --diff"
    },
    "scripts-descriptions": {
        "test": "Run all tests!",
        "test:phpunit": "Run phpunit tests.",
        "test:sca": "Run static code analysis." ,
        "test:cs": "Test coding standards.",
        "demo": "Setup and run 'make-bom' for XML and JSON in demo.",
        "demo:setup": "Setup a demo.",
        "demo:run" : "Run 'make-bom' in a demo.",
        "demo:xml" : "Run 'make-bom' for XML in a demo.",
        "demo:json" : "Run 'make-bom' for JSON in a demo.",
        "cs-fix": "Fix coding standards."
    }
}
