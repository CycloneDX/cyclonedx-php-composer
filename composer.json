{
    "name": "cyclonedx/cyclonedx-php-composer",
    "description": "Creates CycloneDX Software Bill-of-Materials (SBOM) from PHP Composer projects",
    "type": "composer-plugin",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "nscuro",
            "email": "nscuro@protonmail.com"
        }
    ],
    "extra": {
        "class": "CycloneDX\\Composer\\Plugin"
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true
    },
    "require": {
        "php": "^7.3 || ^8.0",
        "ext-dom": "*",
        "ext-filter": "*",
        "ext-json": "*",
        "ext-libxml": "*",
        "composer-plugin-api": "^1.3 || ^2.0",
        "symfony/console": "*"
    },
    "require-dev": {
        "composer/composer": "1.3 || ^2.0",
        "phpunit/phpunit": "^9.5",
        "roave/security-advisories": "dev-latest",
        "swaggest/json-schema": "^0.12.31"
    },
    "autoload": {
        "psr-4": {
            "CycloneDX\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CycloneDX\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test:phpunit": "phpunit",
        "test:phpstan": "@php tools/phpstan/bin/phpstan analyse" ,
        "test:composer-require-checker": "@php tools/composer-require-checker check --config-file=.composer-require-checker.dist.json",
        "test:composer-unused": "@php tools/composer-unused --excludeDir=tools --excludePackage=composer-plugin-api",
        "test:cs-fixer": "@php tools/php-cs-fixer fix --dry-run --diff-format=udiff",
        "test": [
            "@test:phpstan",
            "@test:phpunit",
            "@test:composer-require-checker",
            "@test:composer-unused",
            "@test:cs-fixer"
        ],
        "cs-fix": "@php tools/php-cs-fixer fix --diff-format=udiff",
        "dev-setup": [
            "@composer install",
            "@composer -dtools/phpstan install"
        ]
    },
    "scripts-descriptions": {
        "test": "Run all tests!",
        "test:phpunit": "Run tests with PHPUnit.",
        "test:phpstan": "Run static code analysis with PHPStan.",
        "test:composer-require-checker": "Check for missing requirements.",
        "test:composer-unused": "Check for unused dependencies.",
        "test:cs-fixer": "Test coding standards with PHP-CS-fixer.",
        "cs-fix": "Fix files according to coding standards.",
        "dev-setup": "Setup this project for development."
    }
}
