{
    "name": "cyclonedx/cyclonedx-php-composer",
    "description": "Creates CycloneDX Software Bill-of-Materials (SBOM) from PHP Composer projects",
    "type": "composer-plugin",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "nscuro",
            "email": "nscuro@protonmail.com"
        }
    ],
    "extra": {
        "class": "CycloneDX\\Composer\\Plugin",
        "unused": [
            "composer-plugin-api"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "require": {
        "php": "^7.3 || ^8.0",
        "ext-dom": "*",
        "ext-filter": "*",
        "ext-json": "*",
        "ext-libxml": "*",
        "composer-plugin-api": "^1.1 || ^2.0",
        "package-url/packageurl-php": "dev-main",
        "symfony/console": ">=2.8"
    },
    "require-dev": {
        "composer/composer": "^1.3 || ^2.0",
        "phpunit/phpunit": "^9.5",
        "roave/security-advisories": "dev-latest",
        "swaggest/json-schema": "^0.12.31"
    },
    "autoload": {
        "psr-4": {
            "CycloneDX\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CycloneDX\\Tests\\": "tests"
        }
    },
    "scripts": {
        "dev-setup": [
            "@composer install -dtools/composer-unused",
            "@composer install -dtools/php-cs-fixer",
            "@composer install -dtools/psalm",
            "@composer install"
        ],
        "test:composer-unused": "@php tools/composer-unused/vendor/icanhazstring/composer-unused/bin/composer-unused --excludeDir=tools",
        "test:cs-fixer": "@php tools/php-cs-fixer/vendor/friendsofphp/php-cs-fixer/php-cs-fixer fix --dry-run --diff-format=udiff",
        "test:psalm": "@php tools/psalm/vendor/vimeo/psalm/psalm" ,
        "test:phpunit": "phpunit",
        "test": [
            "@composer validate",
            "@test:psalm",
            "@test:phpunit",
            "@test:cs-fixer",
            "@test:composer-unused"
        ],
        "cs-fix": "@php tools/php-cs-fixer/vendor/friendsofphp/php-cs-fixer/php-cs-fixer fix --diff-format=udiff"
    },
    "scripts-descriptions": {
        "dev-setup": "Install dev-requirements and tools",
        "test": "Run all tests!",
        "test:psalm": "Run static code analysis with Psalm.",
        "test:phpunit": "Run tests with PHPUnit.",
        "test:cs-fixer": "Test coding standards with PHP-CS-fixer.",
        "cs-fix": "Fix files according to coding standards."
    }
}
